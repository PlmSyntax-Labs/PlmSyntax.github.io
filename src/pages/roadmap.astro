---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import PageHeader from '@sections/content/PageHeader.astro';
import RoadmapTimeline from '@sections/product/RoadmapTimeline.astro';
import CTA from '@sections/marketing/CTA.astro';
import { siteConfig } from '@/config';

const roadmapItems = [
  {
    quarter: 'Q3 2026',
    status: 'in-progress' as const,
    items: [
      {
        title: 'Initial Launch',
        description: 'Public release of Smart Merge, IP Guard, and Structure Audit modules.',
        status: 'in-progress' as const,
      },
      {
        title: 'Batch Processing Engine',
        description: 'High-performance parsing for multi-GB assembly files.',
        status: 'in-progress' as const,
      },
    ],
  },
  {
    quarter: 'Q4 2026',
    status: 'planned' as const,
    items: [
      {
        title: 'CLI Tool for Pipelines',
        description: 'Automate PLMXML validation and sanitization in your CI/CD pipelines.',
        status: 'planned' as const,
      },
      {
        title: 'Advanced Structure Audit',
        description: 'Deep link analysis across distributed PLMXML files.',
        status: 'planned' as const,
      },
    ],
  },
  {
    quarter: 'Future',
    status: 'exploring' as const,
    items: [
      {
        title: 'Linux Support',
        description: 'Native Linux builds for server-side pipeline integration.',
        status: 'exploring' as const,
      },
      {
        title: 'Custom Metadata Scrubbing',
        description: 'Rule-based IP sanitization for complex part structures.',
        status: 'exploring' as const,
      },
    ],
  },
];
---

<MarketingLayout
  title={`Roadmap - ${siteConfig.name}`}
  description={`See what's coming next for ${siteConfig.name}. Our public roadmap shows planned features and improvements.`}
>
  <PageHeader title="Product Roadmap" subtitle="See what we're working on and what's coming next.">
    <span class="text-text-muted">Want to shape the future of PlmSyntax? </span>
    <a href="#waitlist" class="text-primary hover:underline">Join the waitlist</a>.
  </PageHeader>

  <RoadmapTimeline quarters={roadmapItems} background="default" />

  <CTA
    title="Help us prioritize features"
    description="We're building PlmSyntax for PLM Engineers. Secure your early bird discount and let us know which features matter most to you."
    action={{ label: 'Get 50% Early Bird Discount', href: '#waitlist' }}
    background="muted"
  />
</MarketingLayout>
